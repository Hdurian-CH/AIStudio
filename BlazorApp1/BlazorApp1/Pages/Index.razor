<div class="row row-cols-12 row-cols-md-12 g-4 mb-3">
    <IndexCard Icon="fa-solid fa-comments"
               Title="Chat"
               Description="Given a chat conversation, the model will return a chat completion response."
               Link="/chat">
    </IndexCard>
</div>

<div class="row row-cols-12 row-cols-md-12 g-4 mb-3">
    <IndexCard Icon="fa-brands fa-microsoft"
               Title="NewBing"
               Description="Using NewBing for chat"
               Link="/BingChat">
    </IndexCard>
</div>

<div class="row row-cols-12 row-cols-md-12  g-4 mb-3">
    <IndexCard Icon="fa-solid fa-image"
               Title="Images"
               Description="Creates or edit an image given a prompt."
               Link="/create-image">
    </IndexCard>
</div>


<div class="row row-cols-12 row-cols-md-12  g-4 mb-3">
    <IndexCard Icon="fa-solid fa-database"
               Title="Models"
               Description="List the various models available in the API."
               Link="/models">
    </IndexCard>
</div>

